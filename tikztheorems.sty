\newsavebox{\mythbox}

\newcommand{\ttmprework}[2]{
	\theoremprework{%
		#1%
		\vskip\ttm@preskip%
		\begin{lrbox}{\mythbox}%
		\begin{minipage}{\textwidth-\ttm@indent-
			\ttm@indent@right-\ttm@xsep-\ttm@xsep}%
		#2%
	}%
}%
\newcommand{\ttmpostworkbreak}[2][]{
	\theorempostwork{
		\end{minipage}%
		\end{lrbox}%
		\hskip\ttm@indent%
		\begin{tikzpicture}[ttm picture]
			\node[ttm thmbox break, #1]
				(thm) {\usebox{\mythbox}};
			\node[ttm thmtitle break]
				(thm title)
				at (thm.north west) {{\theoremheadertext}};
		\end{tikzpicture}%
		#2%
		\vskip\ttm@postskip
	}
}
\newcommand{\ttmpostworkinline}[2][]{
	\theorempostwork{
		\end{minipage}
		\end{lrbox}
		\hskip\ttm@indent%
		\begin{tikzpicture}[ttm picture]
		\node[ttm thmbox inline,#1]
			(thm) {\usebox{\mythbox}};
		\end{tikzpicture}
		#2%
		\vskip\ttm@postskip
	}
